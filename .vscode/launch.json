{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Launch Live Server",
      "request": "launch",
      "type": "chrome",
      "url": "http://127.0.0.1:5500",
      "webRoot": "${workspaceFolder}",
      "runtimeArgs": [
        "--allow-file-access-from-files"
      ]
    }
  ]
}
